<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="DataExportReport">
        <property name="results" type="DataExportResult[]" />
        <property name="isSuccess" type="bool" />
    </transfer>

    <transfer name="DataExportResult">
        <property name="documents" type="DataExportResultDocument[]" />
    </transfer>

    <transfer name="DataExportResultDocument">
        <property name="name" type="string" />
        <property name="objectCount" type="int" />
    </transfer>

    <transfer name="DataExportConfigurationBatch">
        <property name="version" type="int" />
        <property name="defaults" type="DataExportConfiguration" />
        <property name="actions" type="DataExportConfiguration[]" />
    </transfer>

    <transfer name="DataExportConfiguration">
        <property name="dataEntity" type="string" />
        <property name="destination" type="string" />
        <property name="overwrite" type="bool" />
        <property name="operation" type="string" />
        <property name="writer" type="DataExportWriterConfiguration" />
        <property name="filterCriteria" type="array" />
        <property name="connection" type="DataExportConnectionConfiguration" />
        <property name="hidden" type="array" />
    </transfer>

    <transfer name="DataExportWriterConfiguration">
        <property name="type" type="string" />
    </transfer>

    <transfer name="DataExportConnectionConfiguration">
        <property name="type" type="string" />
        <property name="params" type="array" />
    </transfer>

</transfers>
